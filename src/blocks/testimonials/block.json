{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "coblocks/testimonials",
	"title": "Testimonials",
	"category": "layout",
	"description": "Utilize the CoBlocks Testimonials block to display customer feedbacks.",
	"keywords": [ "feedback", "review" ],
	"textdomain": "coblocks",
	"attributes": {
		"columns": {
			"type": "number",
			"default": 2
		},
		"gutter": {
			"type": "string",
			"default": "medium"
		},
		"headingLevel": {
			"type": "integer",
			"default": 4
		},
		"showRoles": {
			"type": "boolean",
			"default": true
		},
		"showImages": {
			"type": "boolean",
			"default": false
		},
		"styleName": {
			"type": "string",
			"default": "boxy"
		},
		"backgroundColor": {
			"type": "string"
		},
		"customBackgroundColor": {
			"type": "string"
		},
		"textColor": {
			"type": "string"
		},
		"customTextColor": {
			"type": "string"
		},
		"bubbleBackgroundColor": {
			"type": "string"
		},
		"bubbleTextColor": {
			"type": "string"
		},
		"customBubbleTextColor": {
			"type": "string"
		},
		"customBubbleBackgroundColor": {
			"type": "string"
		},
		"fontSize": {
			"type": "string"
		},
		"customFontSize": {
			"type": "number"
		}
	},
	"supports": {
		"anchor": true,
		"html": false,
		"color": {
			"link": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true,
			"__experimentalFontStyle": true,
			"__experimentalFontWeight": true,
			"__experimentalLetterSpacing": true,
			"__experimentalTextTransform": true,
			"__experimentalDefaultControls": {
				"fontSize": true
			}
		}
	},
	"style": "wp-block-coblocks-testimonials"
}
